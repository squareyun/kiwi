	<insert id="writeArticle" parameterType="boardDto">
		insert into board(title,
		content, hit, scope, user_no)
		values(#{title}, #{content}, 0, #{scope},
		#{userno})
	</insert>

	<select id="getArticle" parameterType="int" resultMap="board">
		select
		b.board_no, b.title, b.content, b.create_date, b.hit, b.scope,
		u.user_no, u.nickname
		from board b join user u on b.user_no = u.user_no
		where board_no = #{boardno}
	</select>

	<update id="updateHit" parameterType="int">
		update board
		set hit = hit +
		1
		where board_no = #{boardno}
	</update>

	<update id="modifyArticle" parameterType="boardDto">
		update board
		set title =
		#{title}, content = #{content}
		where board_no = #{boardno}
	</update>

	<delete id="deleteArticle" parameterType="int">
		delete from board
		where
		board_no = #{boardno}
	</delete>

