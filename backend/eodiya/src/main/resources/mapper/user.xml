<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.kiwi.user.mapper.UserMapper">


	<!-- int addUser(String name, String id, String pw, String email) throws 
		Exception; int edit(String name, String id, String pw, String email) throws 
		Exception; int delete(String id) throws Exception; boolean checkUser(String 
		id) throws Exception; -->

	<resultMap type="UserDto" id="user">
		<result column="user_id" property="id" />
		<result column="user_name" property="name" />
		<result column="user_pw" property="pw" />
		<result column="email" property="email" />
		<result column="salt" property="salt" />
		<result column="joindate" property="joindate" />
	</resultMap>

	<select id="login" parameterType="String" resultMap="user">
		select
		user_id, user_name, user_pw, email
		from user
		where user_id = #{id} and
		user_pw = #{pw}
	</select>
	
	<select id ="findSalt" parameterType="String" resultType="String">
		select salt
		from user
		where user_id = #{id}
	</select>
	
	<delete id="delete">
		delete from user where user_id = #{id}
	</delete>
	
	<insert id="addUser" parameterType="UserDto">
		insert user
		values(#{id},
		#{name},#{pw},#{email},#{salt},now())
	</insert>
	
	<update id="edit" parameterType="map" >
		update user
		set user_pw = #{pw}, user_name=#{name}
		where user_id = #{id}
	</update>
	
	<select id="listMember" resultMap="user">
		select *
		from user
		order by joindate
	</select>
	
	<select id="getMember" parameterType="string" resultMap="user">
		select user_id, user_name, user_password, email_id, email_domain, join_date
		from members
		where user_id = #{userId}
	</select>
	
	<update id="updateMember" parameterType="userDto">
		update members
		<trim prefix="set" suffixOverrides=",">
			<if test="userPwd != null">user_password = #{userPwd},</if>
			<if test="emailId != null">email_id = #{emailId},</if>
			<if test="emailDomain != null">email_domain = #{emailDomain},</if>
		</trim>
		where user_id = #{userId}
	</update>
	
	<delete id="deleteMember" parameterType="String">
		delete from members
		where user_id = #{userId}
	</delete>
	
</mapper>